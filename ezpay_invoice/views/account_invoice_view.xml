<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ezpay_invoice_view_form" model="ir.ui.view">
            <field name="name">ezpay_invoice_view_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_register_payment']" position="after">
                    <button name="create_ezpay_invoice" type="object" class="oe_stat_button oe_highlight"
                            icon="fa-pencil-square-o" string="開立電子發票"
                            invisible="['|','|',('move_type','!=','out_invoice'),('state','!=','posted'),('uniform_state','!=','to invoice')]"/>
                </xpath>
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="uniform_state" invisible="[('move_type', 'not in', ('out_invoice'))]"/>
                    <field name="ezpay_invoice_id" invisible="[('move_type', 'not in', ('out_invoice'))]"/>
                </xpath>
                <xpath expr="//page[@id='other_tab_entry']" position="after">
                    <page id="ezpay_invoice_uniform" string="電子發票">
                        <group string="電子發票欄位">
                            <group>
                                <field name="uniform_state"/>
                                <field name="ezpay_invoice_id"/>
                                <field name="IIS_Relate_Number"/>
                                <field name="IIS_Sales_Amount"/>
                                <field name="IIS_Remain_Allowance_Amt"/>
                                <field name="IIS_Invalid_Status"/>
                                <field name="IIS_Issue_Status"/>
                                <field name="ezpay_tax_type"/>
                            </group>
                            <group>
                                <field name="is_donation"/>
                                <field name="lovecode"/>
                                <field name="is_print"/>
                                <field name="categoryType"/>
                                <field name="ez_print_address"/>
                                <field name="ezpay_CustomerIdentifier"/>
                                <field name="ez_ident_name"/>
                                <field name="carruerType"/>
                                <field name="carruernum"/>
                            </group>
                        </group>
                        <group string="發票折讓">
                            <group>
                                <field name="III_Invoice_No"/>
                                <field name="IA_Invoice_No"/>
                                <field name="IA_Allow_No"/>
                                <field name="refund_finish" invisible="1"/>
                                <field name="is_refund" invisible="1"/>
                                <field name="show_create_invoice" invisible="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="ezpay_account_invoice_view_tree" model="ir.ui.view">
            <field name="name">ezpay_account_invoice_view_tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="ezpay_invoice_id"/>
                    <field name="IIS_Sales_Amount"/>
                    <field name="IIS_Invalid_Status"/>
                    <field name="IIS_Issue_Status"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>