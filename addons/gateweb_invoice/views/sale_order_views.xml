<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_gateweb_invoice_sale_order_form" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_information']" position="inside">
                    <page name="sales_person" string="電子發票">
                        <group string="電子發票">
                            <group>
                                <field name="ez_print"/>
                                <field name="ez_donate"/>
                                <field name="ez_donate_number"/>
                                <field name="ez_ident_name"/>
                                <field name="ez_ident"/>
                                <field name="ez_print_address"/>
                                <field name="ez_carruer_type"/>
                                <field name="ez_carruer_number"/>
                            </group>
                        </group>
                        <group string="發票折讓">
                            <group>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>