<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ezpay_res_config_setting_form" model="ir.ui.view">
            <field name="name">ezpay_res_config_setting_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="after">
                    <block title="EZPay電子發票" name="ezpay_setting_container">
                        <setting string="電子發票">
                            <div class="content-group">
                                <div class="d-flex">
                                    <label for="ezpay_demo_mode" class="col-3 o_light_label"/>
                                    <field name="ezpay_demo_mode"/>
                                </div>
                                <div class="d-flex">
                                    <label for="auto_invoice" class="col-3 o_light_label"/>
                                    <field name="auto_invoice"/>
                                    <label for="auto_send_invoice" class="col-3 o_light_label"/>
                                    <field name="auto_send_invoice"/>
                                </div>
                                <div class="d-flex">
                                    <label for="seller_Identifier" class="col-3 o_light_label"/>
                                    <field name="seller_Identifier"/>
                                </div>
                            </div>
                        </setting>
                        <setting string="電子發票基本設定">
                            <div class="content-group">
                                <div class="d-flex">
                                    <label for="ezpay_MerchantID" class="col-3 o_light_label"/>
                                    <field name="ezpay_MerchantID"/>
                                </div>
                                <div class="d-flex">
                                    <label for="ezpay_HashKey" class="col-3 o_light_label"/>
                                    <field name="ezpay_HashKey"/>
                                </div>
                                <div class="d-flex">
                                    <label for="ezpay_HashIV" class="col-3 o_light_label"/>
                                    <field name="ezpay_HashIV"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>