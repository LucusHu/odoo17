<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template -->
        <!-- 1in = 6em = 96px -->
        <template id="invoice_A5">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <!-- 賣方公司&Logo -->
                        <div>
                            <div style="text-align:center;">
                                <img t-att-src="image_data_uri(o.company_id.logo)"
                                     style="max-height:45px;height:45px"
                                     alt="Logo"/>
                            </div>
                            <div style="text-align:center;">
                                <h3 style="text-align:center;">電子發票證明聯</h3>
                                <span class="text-center" style="font-family:arial; font-size:larger;"
                                      t-field="o.gw_invoice_date"
                                      t-options='{"format":"yyyy-MM-dd"}'/>
                            </div>
                        </div>
                        <!-- 買方資料 -->
                        <div>
                            <table style="width:100%;border:0 solid #fff;">
                                <tr>
                                    <td style="text-align:left;width:50%;vertical-align: top;">
                                        <div>
                                            <span>發票號碼:</span>
                                            <span t-field="o.invoice_number"/>
                                        </div>
                                        <div>
                                            <span>買方:</span>
                                            <span t-field="o.buyer_name"/>
                                        </div>
                                        <div>
                                            <span>統一編號:</span>
                                            <span t-field="o.buyer_identifier"/>
                                        </div>
                                        <div>
                                            <span>地址:</span>
                                            <!--<span t-field="o.buyer_email_address"/>-->
                                        </div>
                                    </td>
                                    <td style="text-align: right;width:50%;vertical-align: top;">
                                        <div>
                                            <span>格式:</span>
                                            <span>25</span>
                                        </div>
                                        <div>
                                            <span>隨機碼:</span>
                                            <span t-if="o.relate_number">
                                                <t t-esc="o.relate_number[-4:]"/>
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <!-- 商品&金額資料 -->
                        <div>
                            <table style="width:100%;border:.2rem solid #000;">
                                <thead>
                                    <tr>
                                        <td style="margin:.4rem;padding:.4rem;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;text-align:center;">
                                            品名
                                        </td>
                                        <td style="width:8%;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;text-align:center;">
                                            數量
                                        </td>
                                        <td style="width:12%;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;text-align:center;">
                                            單價
                                        </td>
                                        <td style="width:15%;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;text-align:center;">
                                            金額
                                        </td>
                                        <td style="width:30%;border-bottom:.1rem solid #CCC;text-align:center;">
                                            備註
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.detail_ids" t-as="line">
                                        <tr>
                                            <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-right:.1rem solid #CCC;">
                                                <span t-if="line.product_id" t-esc="line.product_id.name"/>
                                            </td>
                                            <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-right:.1rem solid #CCC;text-align:right;">
                                                <span t-esc="int(line.quantity)"/>
                                            </td>
                                            <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-right:.1rem solid #CCC;text-align:right;">
                                                <!--<span t-esc="int(line.price_unit)"/>-->
                                                <span t-esc="int(line.price_subtotal / line.quantity) if line.quantity else 0"/>
                                            </td>
                                            <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-right:.1rem solid #CCC;text-align:right;">
                                                <span t-esc="int(line.price_subtotal)"/>
                                            </td>
                                            <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;text-align:right;">
                                                <span style="padding:2px;margin:0;"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-set="length" t-value="len(o.detail_ids)"/>
                                    <t t-set="itemHeight" t-value="10-length"/>
                                    <tr t-attf-style="height:{{itemHeight}}rem">
                                        <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;"/>
                                        <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;"/>
                                        <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;"/>
                                        <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;"/>
                                        <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;"/>
                                    </tr>
                                    <tr>
                                        <td colspan="3"
                                            style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;vertical-align:middle;">
                                            銷售額(未稅)合計
                                        </td>
                                        <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;text-align:right;">
                                            <span t-esc="int(o.amount_untaxed)"/>
                                        </td>
                                        <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;vertical-align:middle;">
                                            營業人蓋用統一發票專用章
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3"
                                            style="margin:0;padding:0;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;">
                                            <table style="height:2.5rem;width:100%;border:0 solid #fff;">
                                                <tr style="">
                                                    <td style="margin:0;padding:0;border:0 solid #fff;border-right:.1rem solid #CCC;vertical-align:middle;text-align:center;">
                                                        營業稅
                                                    </td>
                                                    <td style="margin:0;padding:0;width:15%;border:0 solid #fff;border-right:.1rem solid #CCC;vertical-align:middle;text-align:center;">
                                                        應稅
                                                    </td>
                                                    <td style="margin:0;padding:0;width:10%;border:0 solid #fff;border-right:.1rem solid #CCC;vertical-align:middle;text-align:center;">
                                                        <span t-esc="'Ｖ'" t-if="o.tax_type=='1'"/>
                                                    </td>
                                                    <td style="margin:0;padding:0;width:15%;border:0 solid #fff;border-right:.1rem solid #CCC;vertical-align:middle;text-align:center;">
                                                        零稅率
                                                    </td>
                                                    <td style="margin:0;padding:0;width:10%;border:0 solid #fff;border-right:.1rem solid #CCC;vertical-align:middle;text-align:center;">
                                                        <span t-esc="'Ｖ'" t-if="o.tax_type=='3'"/>
                                                    </td>
                                                    <td style="margin:0;padding:0;width:15%;border:0 solid #fff;border-right:.1rem solid #CCC;vertical-align:middle;text-align:center;">
                                                        免稅
                                                    </td>
                                                    <td style="margin:0;padding:0;width:10%;border:0 solid #fff;vertical-align:middle;text-align:center;">
                                                        <span t-esc="'Ｖ'" t-if="o.tax_type=='2'"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                        <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;text-align:right;">
                                            <span t-esc="int(o.amount_tax)"/>
                                        </td>
                                        <td rowspan="3"
                                            style="margin:.4rem;padding:.4rem;border:0 solid #fff;vertical-align:top;">
                                            <span style="margin:0;padding:0;">
                                                賣方:
                                                <span t-field="o.seller_name"/>
                                                <br/>
                                                統一編號：
                                                <span t-field="o.seller_identifier"/>
                                                <br/>
                                                地址：
                                                <span t-field="o.seller_address"/>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3"
                                            style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;vertical-align:middle;">
                                            總計
                                        </td>
                                        <td style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-bottom:.1rem solid #CCC;border-right:.1rem solid #CCC;text-align:right;">
                                            <span t-esc="int(o.amount_total)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="4"
                                            style="margin:.4rem;padding:.4rem;border:0 solid #fff;border-right:.1rem solid #CCC;">
                                            <span style="padding-right:10;">總計新台幣
                                                <t t-esc="o.change_num()"/>
                                            </span>
                                            <br/>
                                            （中文大寫）
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>

