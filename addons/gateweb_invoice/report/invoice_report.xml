<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template -->
        <!-- 1in = 6em = 96px -->
        <template id="invoice_A5">
            <t t-call="web.basic_layout">
                <style type="text/css">
                    .table-bordered tr.none{
                    border:none;
                    }
                    .table-bordered tr td.none{
                    border:none;
                    border-left:0.1rem solid #666;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <br/>
                                <div class="col-3"/>
                                <br/>
                                <br/>
                                <div class="col-6" style="text-align:center;">
                                    <img t-att-src="image_data_uri(o.company_id.logo)" style="max-height:45px;"
                                         alt="Logo"/>
                                </div>
                                <div class="col-3"/>
                            </div>
                            <div class="row">
                                <div class="col-3"/>
                                <div class="col-6" style="text-align:center;">
                                    <h3 style="text-align:center;">電子發票證明聯</h3>
                                    <span class="text-center" style="font-family:arial; font-size:larger;"
                                          t-field="o.gw_invoice_date"
                                          t-options='{"format":"yyyy-MM-dd"}'/>
                                </div>
                                <div class="col-3"/>
                            </div>
                            <div class="row">
                                <div class="col-9">
                                    <table style="font-family:arial; font-size:larger; border:#fff;">
                                        <tr style="border:none;">
                                            <td style="border:none;">
                                                <span>發票號碼:</span>
                                                <span t-field="o.invoice_number"/>
                                            </td>
                                        </tr>
                                        <tr style="border:none;">
                                            <td style="border:none;">
                                                <span>買方:</span>
                                                <span t-field="o.buyer_name"/>
                                            </td>
                                        </tr>
                                        <tr style="border:none;">
                                            <td style="border:none;">
                                                <span>統一編號:</span>
                                                <span t-field="o.buyer_identifier"/>
                                            </td>
                                        </tr>
                                        <tr style="border:none; word-wrap:break-word; word-break:break-all;">
                                            <td style="border:none;">
                                                <span>地址:</span>
                                                <!--<span t-field="o.buyer_email_address"/>-->
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-3">
                                    <table style="font-family:arial; font-size:larger; border:#fff;">
                                        <tr style="border:none;">
                                            <td style="border:none;">
                                                <span>格式:</span>
                                                <span>25</span>
                                            </td>
                                        </tr>
                                        <tr style="border:none;">
                                            <td style="border:none;">
                                                <span>隨機碼:</span>
                                                <span t-if="o.relate_number">
                                                    <t t-esc="o.relate_number[-4:]"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <table class="col-12 table table-bordered" style="border:0.2rem solid #000;">
                                    <tbody>
                                        <tr>
                                            <td colspan="4" style="text-align:center;border-color:#666;">品名
                                            </td>
                                            <td style="text-align:center;border-color:#666;">數量</td>
                                            <td colspan="2" style="text-align:center;border-color:#666;">單價
                                            </td>
                                            <td style="text-align:center;border-color:#666;">金額</td>
                                            <td style="text-align:center;border-color:#666;">備註</td>
                                        </tr>
                                        <t t-foreach="o.detail_ids" t-as="line">
                                            <tr class="none">
                                                <td colspan="4" class="none" style="border-color:#666;">
                                                    <span t-if="line.product_id" t-esc="line.product_id.name"/>
                                                </td>
                                                <td class="none" style="text-align:right;border-color:#666;">
                                                    <span t-esc="int(line.quantity)"/>
                                                </td>
                                                <td colspan="2" class="none"
                                                    style="text-align:right;border-color:#666;">
                                                    <span t-esc="int(line.price_unit)"/>
                                                </td>
                                                <td class="none" style="text-align:right;border-color:#666;">
                                                    <span t-esc="int(line.price_subtotal)"/>
                                                </td>
                                                <td class="none" style="border-color:#666;">
                                                    <span style="padding:2px;margin:0px;"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr class="none">
                                            <td class="none" colspan="4"/>
                                            <td class="none"/>
                                            <td class="none" colspan="2"/>
                                            <td class="none"/>
                                            <td class="none"/>
                                        </tr>
                                        <tr class="none">
                                            <td class="none" colspan="4"/>
                                            <td class="none"/>
                                            <td class="none" colspan="2"/>
                                            <td class="none"/>
                                            <td class="none"/>
                                        </tr>
                                        <tr>
                                            <td colspan="7" rowspan="1" style="border-color:#666;">銷售額(未稅)合計</td>
                                            <td style="text-align:right;border-color:#666;">
                                                <t t-esc="o.amount_untaxed"
                                                   t-options="{'widget':'monetary', 'display_currency':res_company.currency_id}"/>
                                            </td>
                                            <td style="width:30%;border-color:#666;">營業人蓋用統一發票專用章</td>
                                        </tr>
                                        <tr>
                                            <td style="width:9%;border-color:#666;">營業稅</td>
                                            <td style="width:8%;border-color:#666;">應稅</td>
                                            <td style="width:8%;border-color:#666;">
                                                <span t-esc="'Ｖ'" t-if="o.tax_type=='1'"/>
                                            </td>
                                            <td style="width:9%;border-color:#666;">零稅率</td>
                                            <td style="width:8%;border-color:#666;">
                                                <span t-esc="'Ｖ'" t-if="o.tax_type=='3'"/>
                                            </td>
                                            <td style="width:8%;border-color:#666;">免稅</td>
                                            <td style="width:8%;border-color:#666;">
                                                <span t-esc="'Ｖ'" t-if="o.tax_type=='2'"/>
                                            </td>
                                            <td style="text-align:right;border-color:#666;">
                                                <t t-esc="o.amount_tax"
                                                   t-options="{'widget':'monetary', 'display_currency':res_company.currency_id}"/>
                                            </td>
                                            <td colspan="1" rowspan="3" style="border-color:#666;">
                                                <span style="padding:0px;margin:0px;">
                                                    賣方:
                                                    <span t-field="o.seller_name"/>
                                                    <br/>
                                                    統一編號：
                                                    <span t-field="o.seller_identifier"/>
                                                    <br/>
                                                    地址：
                                                    <span t-field="o.seller_address"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="7" rowspan="1" style="border-color:#666;">總計</td>
                                            <td style="text-align:right;border-color:#666;">
                                                <t t-esc="int(o.amount_total)"
                                                   t-options="{'widget':'monetary', 'display_currency':o.company_id.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="8" rowspan="1" style="border-color:#666;">
                                                <span style="padding-right:10px">總計新台幣</span>
                                                <t t-esc="o.change_num()"/>
                                                <br/>
                                                （中文大寫）
                                            </td>
                                            <!-- -->
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="invoice_A4">
            <t t-call="web.basic_layout">
                <style type="text/css">
                    .table-bordered tr.none{
                    border:none;
                    }
                    .table-bordered tr td.none{
                    border:none;
                    border-left:0.1rem solid #666;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="row">
                            <div class="col-3 d-flex justify-content-center align-items-center"
                                 style="height:100px;">
                                <img t-att-src="image_data_uri(o.company_id.logo)" style="margin:auto;max-width:8rem;"
                                     alt="Logo"/>
                            </div>
                            <div class="col-6" style="text-align:center;">
                                <h2 style="text-align:center;" t-field="o.company_id.name"/>
                                <h3 style="text-align:center;" t-esc="'電子發票證明聯'"/>
                                <span class="text-center" style="font-family:arial; font-size:larger;"
                                      t-field="o.gw_invoice_date"
                                      t-options='{"format":"yyyy 年 MM 月 dd 日"}'/>
                            </div>
                            <div class="col-3"/>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <table style="font-family:arial;font-size:1rem;border:#fff;">
                                    <tr>
                                        <td>
                                            <span>發票號碼:</span>
                                            <span t-field="o.invoice_number"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>買方:</span>
                                            <span t-field="o.buyer_name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>統一編號:</span>
                                            <span t-field="o.buyer_identifier"/>
                                        </td>
                                    </tr>
                                    <tr style="word-wrap:break-word; word-break:break-all;">
                                        <td>
                                            <span>地址:</span>
                                            <!--<span t-field="o.buyer_email_address"/>-->
                                        </td>
                                    </tr>
                                    <tr/>
                                </table>
                            </div>
                            <div class="col-6 d-flex justify-content-end">
                                <table style="font-family:arial;font-size:1rem;border:#fff;">
                                    <tr>
                                        <td>
                                            <span>檢查號碼:</span>
                                            <span t-if="o.relate_number">
                                                <t t-esc="o.relate_number[-4:]"/>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>客戶編號:</span>
                                            <!--<span t-field="o.relate_number"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>訂單編號:</span>
                                            <!--<span t-field="o.relate_number"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>貨單編號:</span>
                                            <!--<span t-field="o.relate_number"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span>格式:</span>
                                            <span>25</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <table class="col-12 table table-bordered" style="border:0.2rem solid #000;">
                                <thead>
                                </thead>
                                <tbody>
                                    <tr style="text-align:center;">
                                        <td colspan="4" style="border-color:#666;">品名</td>
                                        <td style="text-align:center;border-color:#666;">數量</td>
                                        <td colspan="2" style="text-align:center;border-color:#666;">單價</td>
                                        <td style="text-align:center;border-color:#666;">金額</td>
                                    </tr>
                                    <t t-foreach="o.detail_ids" t-as="line">
                                        <tr class="none">
                                            <td colspan="4" class="none">
                                                <span t-if="line.product_id" t-esc="line.product_id.name"/>
                                            </td>
                                            <td class="none" style="text-align:right;">
                                                <span t-esc="int(line.quantity)"/>
                                            </td>
                                            <td colspan="2" class="none" style="text-align:right;">
                                                <span t-esc="int(line.price_unit)"/>
                                            </td>
                                            <td class="none" style="text-align:right;">
                                                <span t-esc="int(line.price_subtotal)"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-set="length" t-value="len(o.detail_ids)"/>
                                    <t t-set="itemHeight" t-value="34-length"/>
                                    <!--<t t-out="length"/>-->
                                    <!--<t t-out="itemHeight"/>-->
                                    <tr class="none" t-attf-style="height:{{itemHeight}}rem">
                                        <td colspan="4" class="none"/>
                                        <td class="none"/>
                                        <td colspan="2" class="none"/>
                                        <td class="none"/>
                                    </tr>
                                    <tr>
                                        <td colspan="7" style="border-color:#666;">銷售額(未稅)合計</td>
                                        <td style="text-align:right;border-color:#666;">
                                            <span t-esc="int(o.amount_untaxed)"/>
                                            <!--                                            <t t-esc="o.amount_untaxed"-->
                                            <!--                                               t-options="{'widget':'monetary', 'display_currency':res_company.currency_id}"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width:9%;border-color:#666;">營業稅</td>
                                        <td style="width:8%;border-color:#666;">應稅</td>
                                        <td style="width:8%;border-color:#666;">
                                            <span t-esc="'Ｖ'" t-if="o.tax_type=='1'"/>
                                        </td>
                                        <td style="width:9%;border-color:#666;">零稅率</td>
                                        <td style="width:8%;border-color:#666;">
                                            <span t-esc="'Ｖ'" t-if="o.tax_type=='3'"/>
                                        </td>
                                        <td style="width:8%;border-color:#666;">免稅</td>
                                        <td style="width:8%;border-color:#666;">
                                            <span t-esc="'Ｖ'" t-if="o.tax_type=='2'"/>
                                        </td>
                                        <td style="text-align:right;border-color:#666;">
                                            <span t-esc="int(o.amount_tax)"/>
                                            <!--                                            <t t-esc="o.amount_tax"-->
                                            <!--                                               t-options="{'widget':'monetary', 'display_currency':res_company.currency_id}"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="7" style="border-color:#666;">總計</td>
                                        <td style="text-align:right;border-color:#666;">
                                            <span t-esc="int(o.amount_total)"/>
                                            <!--                                            <t t-esc="int(o.amount_total)"-->
                                            <!--                                               t-options="{'widget':'monetary', 'display_currency':o.company_id.currency_id}"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="8" style="border-color:#666;">
                                            <span style="padding-right:10px">總計新台幣</span>
                                            <t t-esc="o.change_num()"/>
                                            <br/>
                                            （中文大寫）
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="7" style="border-color:#666;">
                                            <span style="padding:0px;margin:0px;">備註</span>
                                        </td>
                                        <td style="border-color:#666;">
                                            <span style="width:30%;border-color:#666;">營業人蓋用統一發票專用章
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="7" style="border-color:#666;">
                                            <span style="padding:0px;margin:0px;">
                                                本發票如有錯誤請於次日５日前寄回，逾期恕不受理
                                                <br/>
                                                <br/>
                                                <br/>
                                            </span>
                                        </td>
                                        <td rowspan="2" style="border-color:#666;">
                                            <span style="padding:0px;margin:0px;">
                                                賣方:
                                                <span t-field="o.seller_name"/>
                                                <br/>
                                                統一編號：
                                                <span t-field="o.seller_identifier"/>
                                                <br/>
                                                地址：
                                                <span t-field="o.seller_address"/>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="7" style="border-color:#666;">
                                            <span style="padding:0px;margin:0px;">
                                                <span>
                                                    ※應稅、零稅率、免稅之銷售額應分別開立統一發票，並應於各該欄打「v」。
                                                </span>
                                                <br/>
                                                <!--                                                    <span>-->
                                                <!--                                                        1.本發票依台北市稅捐稽徵處84年3月11日北市稽工丁字第43224號函核准使用。-->
                                                <!--                                                    </span>-->
                                                <!--                                                    <br/>-->
                                                <span>1.本統一發票由電腦開立，凡經塗改即屬無效。</span>
                                                <br/>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <!-- Action -->
        <record id="action_gateweb_invoices_A4" model="ir.actions.report">
            <field name="name">電子發票(A4格式)</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <!--qweb-pdf, qweb-html -->
            <field name="report_name">gateweb_invoice.invoice_A4</field>
            <field name="report_file">gateweb_invoice.invoice_A4</field>
            <field name="print_report_name">'%s' % (object.invoice_number)</field>
            <field name="paperformat_id" ref="gateweb_invoice.paperformat_gateweb_invoice_A4"/>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>

        <record id="action_gateweb_invoices_A5" model="ir.actions.report">
            <field name="name">電子發票(A5格式)</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <!--qweb-pdf, qweb-html -->
            <field name="report_name">gateweb_invoice.invoice_A5</field>
            <field name="report_file">gateweb_invoice.invoice_A5</field>
            <field name="print_report_name">'%s' % (object.invoice_number)</field>
            <field name="paperformat_id" ref="gateweb_invoice.paperformat_gateweb_invoice_A5"/>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>