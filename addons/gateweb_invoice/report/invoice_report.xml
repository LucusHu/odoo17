        <!-- Action -->
        <record id="action_gateweb_invoices_A4" model="ir.actions.report">
            <field name="name">電子發票(A4格式)</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <!--qweb-pdf, qweb-html -->
            <field name="report_name">gateweb_invoice.invoice_A4</field>
            <field name="report_file">gateweb_invoice.invoice_A4</field>
            <field name="print_report_name">'%s' % (object.invoice_number)</field>
            <field name="paperformat_id" ref="gateweb_invoice.paperformat_gateweb_invoice_A4"/>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>

