                                                    <field name="black_print_deduct" readonly="True"/>
                                                </group>
                                            </group>
                                            <group>
                                                <group string="起算日">
                                                    <field name="date_start"/>
                                                    <field name="color_print_start"/>
                                                    <field name="black_print_start"/>
                                                    <field name="large_print_start"/>
