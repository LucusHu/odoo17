<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ez_sale_order_form_inherit" model="ir.ui.view">
            <field name="name">ez_sale_order_form_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_information']" position="inside">
                    <group>
                        <group string="Ezpay電商資料" name="ez_data">
                            <field name="ez_print"/>
                            <field name="ez_donate"/>
                            <field name="ez_donate_number"/>
                            <field name="ez_ident_name"/>
                            <field name="ez_ident"/>
                            <field name="ez_print_address"/>
                            <field name="ez_carruer_type"/>
                            <field name="ez_carruer_number"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>