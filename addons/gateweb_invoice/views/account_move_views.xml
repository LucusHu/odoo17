<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_gateweb_invoice_form" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_invoice_sent']" position="after">
                    <button name="create_invoice" type="object" class="oe_stat_button oe_highlight"
                            icon="fa-pencil-square-o" string="開立電子發票"
                            invisible="['|','|',('move_type','!=','out_invoice'),('state','!=','posted'),('state','!=','not invoiced')]"/>
                </xpath>
                <xpath expr="//page[@id='other_tab_entry']" position="after">
                    <page name="gateweb_invoice" string="電子發票">
                        <group string="電子發票">
                            <group>
                                <field name="invoice_category"/>
                                <field name="invoice_state"/>
                                <field name="invoice_number"/>
                                <field name="gw_invoice_date"/>
                                <field name="invoice_time"/>
                                <field name="amount_tax"/>
                                <field name="amount_total"/>
                            </group>
                            <group>
                                <field name="print_mark"/>
                                <field name="donate_mark"/>
                                <field name="npo_ban"/>
                                <field name="carrier_type"/>
                                <field name="carrier_id1"/>
                            </group>
                        </group>
                        <group>
                            <group string="買方">
                                <field name="buyer_identifier"/>
                                <field name="buyer_name"/>
                                <field name="buyer_email_address"/>
                            </group>
                            <group string="作廢">
                                <field name="cancel_date"/>
                                <field name="cancel_time"/>
                                <field name="cancel_reason"/>
                            </group>
                        </group>
                        <group string="折讓">
                            <field name="allowance_amount"/>
                            <!-- 折讓單 -->
                            <field name="allowance_ids">
                                <tree>
                                    <field name="state"/>
                                    <field name="allowance_date"/>
                                    <field name="amount"/>
                                    <field name="cancel_date"/>
                                    <button string="作廢"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="state"/>
                                            <field name="allowance_date"/>
                                            <field name="amount"/>
                                            <field name="cancel_date"/>
                                        </group>
                                        <group>
                                            <!-- 折讓商品 -->
                                            <field name="detail_ids">
                                                <tree>
                                                    <field name="name"/>
                                                    <field name="unit_price"/>
                                                    <field name="quantity"/>
                                                    <field name="tax_type"/>
                                                    <field name="tax"/>
                                                    <field name="amount"/>
                                                </tree>
                                                <form>
                                                    <sheet>
                                                        <group>
                                                            <field name="name"/>
                                                            <field name="unit_price"/>
                                                            <field name="quantity"/>
                                                            <field name="tax_type"/>
                                                            <field name="tax"/>
                                                            <field name="amount"/>
                                                        </group>
                                                    </sheet>
                                                </form>
                                            </field>
                                            <!-- End 折讓商品 -->
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                            <!-- End 折讓單 -->
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>